generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int          @id @default(autoincrement())
  pseudo       String       @db.VarChar(30)
  email        String       @unique @db.VarChar(255)
  password     String       @db.VarChar(255)
  photoProfil  String?      @db.VarChar(255)
  consolePref  String?      @db.VarChar(30)
  collections  Collection[]
}

model Collection {
  id           Int        @id @default(autoincrement())
  statut       String?    @db.VarChar(20)
  avancement   String?    @db.VarChar(20)

  userId       Int
  gameId       Int
  plateformeId Int

  user       User      @relation(fields: [userId], references: [id])
  game       Game      @relation(fields: [gameId], references: [id])
  plateforme Plateform @relation(fields: [plateformeId], references: [id])
}

model Game {
  id           Int          @id @default(autoincrement())
  name         String       @db.VarChar(100)
  plateformeId Int

  plateforme   Plateform    @relation(fields: [plateformeId], references: [id])
  collections  Collection[]
}

model Plateform {
  id           Int          @id @default(autoincrement())
  name         String       @db.VarChar(50)
  games        Game[]
  collections  Collection[]
}